@model AdminDashboard.Dto.CourseDto

@{
    ViewData["Title"] = "Edit Course";
}

<link href="~/css/editcourse.css" rel="stylesheet" />

<div class="container-fluid">
    <h1 class="text-center my-4">Edit @Model.Name</h1>
    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@modelError.ErrorMessage</p>
            }
        </div>
    }

    <form method="post" asp-action="Edit" enctype="multipart/form-data" class="w-100">
        <input asp-for="Id" hidden />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Course Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Author" class="col-sm-2 col-form-label">Author</label>
            <div class="col-sm-10">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CourseLanguage" class="col-sm-2 col-form-label">Language</label>
            <div class="col-sm-10">
                <input asp-for="CourseLanguage" class="form-control" />
                <span asp-validation-for="CourseLanguage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Image" class="col-sm-2 col-form-label">Upload Image</label>
            <div class="col-sm-10">
                <input type="file" asp-for="Image" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-4">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}