@model QuizDto
@{
    ViewData["Title"] = "تعديل الامتحان";
}
<link href="~/css/editQuiz.css" rel="stylesheet" />

<div class="container quiz-container">
    <h2 class="page-title">تعديل الامتحان</h2>

    @if (!ViewContext.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewContext.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" id="quizForm">
        <input type="hidden" asp-for="Id" />

        <div class="form-section">
            <h3 class="section-title">معلومات الامتحان</h3>
            <div class="form-group">
                <label asp-for="Name">اسم الامتحان</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">وصف الامتحان</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId">المقرر الدراسي</label>
                <select asp-for="CourseId" class="form-control">
                    <option value="">-- اختر المقرر --</option>
                    @foreach (var course in ViewBag.Courses)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <h3 class="section-title">الأسئلة</h3>
            <div id="questions-container">
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <div class="question-card" id="question-@i">
                        <div class="card-header">
                            <span class="question-number">سؤال @(i + 1)</span>
                            <button type="button" class="btn btn-danger btn-sm remove-question" data-question-id="@i">حذف</button>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="Questions[i].Id" />

                            <div class="form-group">
                                <label asp-for="Questions[i].Text">نص السؤال</label>
                                <textarea asp-for="Questions[i].Text" class="form-control"></textarea>
                                <span asp-validation-for="Questions[i].Text" class="text-danger"></span>
                            </div>

                            <div class="choices-container">
                                <h4>الخيارات</h4>
                                @for (int j = 0; j < Model.Questions[i].Choices.Count; j++)
                                {
                                    <div class="choice-row">
                                        <div class="form-group">
                                            <input type="hidden" asp-for="Questions[i].Choices[j].Id" />
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <input type="radio"
                                                               name="Questions[@i].CorrectChoice"
                                                               value="@j"
                                                        @(Model.Questions[i].CorrectChoice == j ? "checked" : "") />
                                                    </div>
                                                </div>
                                                <input type="text" asp-for="Questions[i].Choices[j].Text" class="form-control" placeholder="ادخل الخيار" />
                                            </div>
                                            <span asp-validation-for="Questions[i].Choices[j].Text" class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                                <button type="button" class="btn btn-info btn-sm add-choice" data-question-index="@i">إضافة خيار</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="form-actions">
                <button type="button" id="add-question" class="btn btn-primary">إضافة سؤال جديد</button>
            </div>
        </div>

        <div class="form-group submit-section">
            <button type="submit" class="btn btn-success">حفظ التغييرات</button>
            <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Add new question
            $("#add-question").click(function() {
                var questionIndex = $("#questions-container .question-card").length;
                var questionTemplate = `
                    <div class="question-card" id="question-${questionIndex}">
                        <div class="card-header">
                            <span class="question-number">سؤال ${questionIndex + 1}</span>
                            <button type="button" class="btn btn-danger btn-sm remove-question" data-question-id="${questionIndex}">حذف</button>
                        </div>

                        <div class="card-body">
                            <input type="hidden" name="Questions[${questionIndex}].Id" value="0" />

                            <div class="form-group">
                                <label>نص السؤال</label>
                                <textarea name="Questions[${questionIndex}].Text" class="form-control"></textarea>
                            </div>

                            <div class="choices-container">
                                <h4>الخيارات</h4>
                                <div class="choice-row">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <input type="radio" name="Questions[${questionIndex}].CorrectChoice" value="0" checked />
                                                </div>
                                            </div>
                                            <input type="text" name="Questions[${questionIndex}].Choices[0].Text" class="form-control" placeholder="ادخل الخيار" />
                                        </div>
                                    </div>
                                </div>
                                <div class="choice-row">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <input type="radio" name="Questions[${questionIndex}].CorrectChoice" value="1" />
                                                </div>
                                            </div>
                                            <input type="text" name="Questions[${questionIndex}].Choices[1].Text" class="form-control" placeholder="ادخل الخيار" />
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-info btn-sm add-choice" data-question-index="${questionIndex}">إضافة خيار</button>
                            </div>
                        </div>
                    </div>
                `;

                $("#questions-container").append(questionTemplate);
                bindEvents();
            });

            // Remove question
                   // Remove question
        function bindEvents() {
            $(".remove-question").off("click").on("click", function() {
                var questionId = $(this).data("question-id");
                var questionElement = $("#question-" + questionId);

                // If this is an existing question (has an ID > 0), add a hidden input to track deletion
                var questionDbId = questionElement.find("input[name^='Questions[" + questionId + "].Id']").val();
                if (questionDbId && questionDbId > 0) {
                    // We don't need to add anything since our backend will detect removed questions
                    // by comparing IDs in the database vs IDs in the submitted form
                }

                // Remove the question from the UI
                questionElement.remove();
                renumberQuestions();
            });

            // Rest of your existing bindEvents code...
        }

            // Renumber questions after deletion
            function renumberQuestions() {
                $("#questions-container .question-card").each(function(index) {
                    var oldIndex = $(this).attr("id").split("-")[1];

                    // Update question number display
                    $(this).find(".question-number").text("سؤال " + (index + 1));

                    // Update input names and IDs
                    $(this).attr("id", "question-" + index);
                    $(this).find("[name^='Questions[" + oldIndex + "]']").each(function() {
                        var newName = $(this).attr("name").replace("Questions[" + oldIndex + "]", "Questions[" + index + "]");
                        $(this).attr("name", newName);
                    });

                    // Update data attributes
                    $(this).find("[data-question-id='" + oldIndex + "']").attr("data-question-id", index);
                    $(this).find("[data-question-index='" + oldIndex + "']").attr("data-question-index", index);
                });
            }

            // Initial binding
            bindEvents();
        });
    </script>
}