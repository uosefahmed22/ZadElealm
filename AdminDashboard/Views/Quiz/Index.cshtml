@using ZadElealm.Core.ServiceDto
@model IEnumerable<QuizDto>

@{
    ViewData["Title"] = "Quizzes";
}

<div class="d-flex justify-content-between align-items-center mt-2">
    <h1 class="display-4 text-warning">All Quizzes</h1>
    <a asp-action="Create" asp-controller="Quiz" class="btn btn-dark">Add Quiz</a>
</div>
<hr class="my-4 bg-primary" />

<link href="~/css/quizzes.css" rel="stylesheet" />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Course Name</th>
                    <th>Number of Questions</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td class="align-middle">@quiz.Id</td>
                        <td class="align-middle">@quiz.Name</td>
                        <td class="align-middle description">@quiz.Description</td>
                        <td class="align-middle">@ViewBag.Courses[quiz.CourseId]</td>
                        <td class="align-middle">@quiz.QuestionCount</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-warning mr-2" asp-action="Edit" asp-route-id="@quiz.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@quiz.Id">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert alert-warning text-center">
        <h2 class="display-5">There are no quizzes</h2>
    </div>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}