@using ZadElealm.Core.ServiceDto
@model IEnumerable<QuizDto>

@{
    ViewData["Title"] = "Quizzes";
}
<link href="~/css/quizList.css" rel="stylesheet" />

<div class="quiz-header">
    <h1>All Quizzes</h1>
    <a asp-action="Create" asp-controller="Quiz" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Quiz
    </a>
</div>

<div class="divider"></div>

@if (Model.Any())
{
    <div class="quiz-table-container">
        <table class="quiz-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Course Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.Id</td>
                        <td>@quiz.Name</td>
                        <td class="description" title="@quiz.Description">@quiz.Description</td>
                        <td>@ViewBag.Courses[quiz.CourseId]</td>
                        <td class="actions">
                            <div class="btn-group">
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@quiz.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@quiz.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-clipboard-list"></i>
        <h2>No Quizzes Available</h2>
        <p>Start by adding your first quiz!</p>
    </div>
}