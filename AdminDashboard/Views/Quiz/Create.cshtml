@using ZadElealm.Core.ServiceDto
@model QuizDto

@{
    ViewData["Title"] = "إنشاء امتحان";
}
<link href="~/css/createQuiz.css" rel="stylesheet" />

<div class="quiz-create-container">
    <div class="quiz-create-card">
        <h2 class="quiz-create-title">إنشاء امتحان جديد</h2>

        <form method="post" asp-action="Create" class="quiz-form">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="form-section">
                <div class="form-group">
                    <label asp-for="Name" class="required">اسم الامتحان</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="required">الوصف</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CourseId" class="required">اختر الدورة</label>
                    <select asp-for="CourseId" class="form-control">
                        <option value="">اختر دورة</option>
                        @foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
            </div>

            <div id="questions-container" class="questions-section">
                <h3>الأسئلة</h3>
                <div class="question-template">
                    <div class="question-header">
                        <span class="question-number">سؤال 1</span>
                        <button type="button" class="btn btn-danger btn-sm remove-question" style="display: none;">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>

                    <div class="form-group">
                        <label>نص السؤال</label>
                        <input type="text" name="Questions[0].Text" class="form-control" required />
                    </div>

                    <div class="choices-container">
                        <label>الخيارات</label>
                        @for (int i = 0; i < 4; i++)
                        {
                            <div class="choice-input">
                                <span class="choice-number">@(i + 1)</span>
                                <input type="text" name="Questions[0].Choices[@i].Text" class="form-control" required />
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <label>الإجابة الصحيحة</label>
                        <select name="Questions[0].CorrectChoice" class="form-control" required>
                            @for (int i = 1; i <= 4; i++)
                            {
                                <option value="@i">الخيار @i</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-success" id="add-question">
                    <i class="fas fa-plus"></i> إضافة سؤال
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> حفظ الامتحان
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/createQuiz.js"></script>
}