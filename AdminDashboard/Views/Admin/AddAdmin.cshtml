@{
    Layout = null;
}
@model AdminDto
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إضافة مستخدم جديد</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/AddAdmin.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0069d9;
                color: white;
            }

        .progress-container {
            margin: 20px 0;
        }

        .progress {
            height: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <div class="form-container">
            <a href="@Url.Action("Index", "User")" class="btn btn-secondary mb-3">
                <i class="fas fa-arrow-left"></i> العودة للقائمة
            </a>
            <h2 class="text-center my-4">إضافة مدير جديد</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="progress-container">
                <div class="d-flex justify-content-between mb-1">
                    <span>عدد المديرين: @ViewBag.AdminCount من أصل @ViewBag.MaxAdminCount</span>
                    <span>المتبقي: @(ViewBag.MaxAdminCount - ViewBag.AdminCount)</span>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-info" role="progressbar"
                         style="width: @(((double)ViewBag.AdminCount / ViewBag.MaxAdminCount) * 100)%"
                         aria-valuenow="@ViewBag.AdminCount" aria-valuemin="0" aria-valuemax="@ViewBag.MaxAdminCount">
                        @ViewBag.AdminCount/@ViewBag.MaxAdminCount
                    </div>
                </div>
            </div>

            <form method="post" asp-action="AddAdmin" class="needs-validation" novalidate id="adminForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="DisplayName">الاسم بالكامل</label>
                    <input type="text" class="form-control" id="displayname" name="DisplayName" asp-for="DisplayName" placeholder="ادخل الاسم بالكامل" required>
                    <div class="invalid-feedback">يرجى إدخال الاسم بالكامل.</div>
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="email">البريد الإلكتروني</label>
                    <input type="email" class="form-control" id="email" name="Email" asp-for="Email" placeholder="ادخل البريد الإلكتروني" required>
                    <div class="invalid-feedback">يرجى إدخال بريد إلكتروني صحيح.</div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password">الرقم السري</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="Password" asp-for="Password" placeholder="ادخل الرقم السري" required>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="invalid-feedback">يرجى إدخال الرقم السري.</div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-custom btn-block">إضافة مدير</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // التحقق من صحة النموذج
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // تأكيد إضافة المدير
        document.getElementById('adminForm').addEventListener('submit', function(e) {
            if (!confirm('هل أنت متأكد من إضافة هذا المدير؟')) {
                e.preventDefault();
            }
        });

        // عرض/إخفاء كلمة المرور
        document.getElementById('togglePassword').addEventListener('click', function() {
            var passwordInput = document.getElementById('password');
            var icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    </script>
</body>
</html>