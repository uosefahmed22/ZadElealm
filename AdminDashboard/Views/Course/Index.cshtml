@model IEnumerable<CourseDto>
@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mt-2">
    <h1 class="display-4 text-warning">All Courses</h1>
    <a asp-action="Create" asp-controller="Course" class="btn btn-dark">Add Course</a>
</div>
<hr class="my-4 bg-primary" />

<link href="~/css/courses.css" rel="stylesheet" />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.Author)</th>
                    <th>@Html.DisplayNameFor(m => m.CourseLanguage)</th>
                   @*  <th>@Html.DisplayNameFor(m => m.CourseVideosCount)</th>
                    <th>@Html.DisplayNameFor(m => m.rating)</th>
                    <th>@Html.DisplayNameFor(m => m.ImageUrl)</th> *@
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="align-middle">@course.Id</td>
                        <td class="align-middle">@course.Name</td>
                        <td class="align-middle">@course.Description</td>
                        <td class="align-middle">@course.Author</td>
                        <td class="align-middle">@course.CourseLanguage</td>
                        @* <td class="align-middle">@course.CourseVideosCount</td> *@
                       @*  <td class="align-middle">@course.rating</td>
                        <td class="align-middle">
                            <img src="@course.ImageUrl" alt="@course.Name" class="img-thumbnail" style="max-width: 100px;" />
                        </td> *@
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-warning mr-2" asp-action="Edit" asp-route-id="@course.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@course.Id">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert alert-warning text-center">
        <h2 class="display-5">There are no courses</h2>
    </div>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}