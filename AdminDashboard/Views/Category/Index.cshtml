@model IEnumerable<CategoryResponseDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mt-2">
    <h1 class="display-4 text-warning">All Categories</h1>
    <a asp-action="Create" asp-controller="Category" class="btn btn-dark">
        <i class="fas fa-plus-circle me-2"></i>Add Category
    </a>
</div>
<hr class="my-4 bg-primary" />

<link href="~/css/categories.css" rel="stylesheet" />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Id</td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Description</td>
                        <td class="align-middle">
                            <div class="image-container">
                                <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" />
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-warning me-2" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert alert-warning text-center">
        <h2 class="display-5">There are no categories</h2>
    </div>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}