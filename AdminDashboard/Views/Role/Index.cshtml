@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2 display-4 text-center text-primary">All Roles</h1>
<hr class="my-4 bg-primary" />

<link href="~/css/getroles.css" rel="stylesheet" />
<partial name="RoleForm" model="new RoleFormViewModel()" />

@if (@Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(r => r.Id)</th>
                    <th>@Html.DisplayNameFor(r => r.Name)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowNumber = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@(rowNumber++)</td>
                        <td class="align-middle">@item.Id</td>
                        <td class="align-middle">@item.Name</td>
                        <td class="text-center">
                            @{
                                var isDisabled = item.Name == "Admin" || item.Name == "User";
                            }
                            <a class="btn btn-sm btn-outline-warning mr-2 @(isDisabled ? "disabled" : "")"
                               asp-action="Update" asp-route-id="@item.Id"
                               aria-disabled="@(isDisabled)">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a class="btn btn-sm btn-outline-danger @(isDisabled ? "disabled" : "")"
                               asp-action="Delete" asp-route-id="@item.Id"
                               aria-disabled="@(isDisabled)">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert alert-warning text-center">
        <h2 class="display-5">There are no records</h2>
    </div>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}